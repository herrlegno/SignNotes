{
  "name": "signnotes",
  "version": "1.0.0",
  "author": "Alejandro Gonzalez Alonso",
  "description": "Aplicación para gestionar la asistencia y la realización de horas de trabajo.",
  "private": true,
  "productName": "SignNotes",
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "allowElevation": false,
      "deleteAppDataOnUninstall": true
    }
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "dev": "nf start",
    "start-electron": "electron .",
    "build-electron": "rsync -a electron/ build/electron --exclude 'dev-start.js'",
    "prepackage": "npm run build && npm run build-electron",
    "package": "electron-builder build -wl -c.extraMetadata.main=build/electron/main.js --publish never"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^5.6.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.27",
    "@fortawesome/free-solid-svg-icons": "^5.12.1",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.26",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "bootstrap": "^4.4.1",
    "classnames": "^2.2.6",
    "dexie": "^2.0.4",
    "immutable": "^4.0.0-rc.12",
    "moment": "^2.24.0",
    "react": "^16.12.0",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.9",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "craco-alias": "^2.1.0",
    "electron": "^8.0.0",
    "electron-builder": "^22.3.2",
    "foreman": "^3.0.1"
  }
}
